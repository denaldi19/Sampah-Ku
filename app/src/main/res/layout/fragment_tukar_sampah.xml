<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TukarSampah">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tukar Sampah"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:orientation="vertical"
            android:background="@drawable/custom_input"
            android:layout_marginBottom="15sp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/custom_input">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Sampah"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/jenisSampah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_input"
                    android:text="Pilih Sampah Plastik"
                    android:textColor="#1761A0"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/textSampah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat Pengambilan"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editTextTextPersonName3"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:paddingLeft="10dp"
                    android:textSize="12sp"
                    android:background="@drawable/custom_input"
                    android:ems="10"
                    android:hint="Masukkan alamat lengkap (kec., kel., dll.) dari lokasi sampah Anda"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nomor Telepon"
                    android:textColor="@color/colorBlack"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editTextTextPersonName4"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/custom_input"
                    android:paddingLeft="10dp"
                    android:ems="10"
                    android:textSize="12sp"
                    android:hint="Masukkan nomor telepon yang dapat dihubungi"
                    android:layout_marginBottom="10dp"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jadwal Pengambilan"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <Button
                        android:id="@+id/pilihTanggal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0"
                        android:background="@drawable/custom_input"
                        android:text="Pilih Tanggal"
                        android:padding="10sp"/>

                    <TextView
                        android:id="@+id/txtTanggal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="dd-MM-yyyy" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_marginBottom="10dp"
                    android:text="Foto Sampah yang ingin di Tukar" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/fotosampah"
                    />

                <Button
                    android:id="@+id/btnUnggahFoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/custom_input"
                    android:text="unggah foto sampah anda"
                    android:textColor="#1761A0"/>

                <Button
                    android:id="@+id/lanjut"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_gravity="center"
                    android:text="lanjut"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/custom_button" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="150sp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Kembali"
                    android:background="@drawable/custom_button2"/>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</FrameLayout>