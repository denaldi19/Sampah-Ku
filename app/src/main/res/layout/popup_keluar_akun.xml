<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorShadow">

    <LinearLayout
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/borderdashboard2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notif_yakin_keluar"
            android:gravity="center"
            android:textSize="23sp"
            android:layout_marginBottom="17sp"
            />

        <TextView
            android:id="@+id/txt_keluar_akun_ya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jwb_ya"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"/>

        <TextView
            android:id="@+id/txt_keluar_akun_tdk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jwb_tdk"
            android:textSize="20sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>